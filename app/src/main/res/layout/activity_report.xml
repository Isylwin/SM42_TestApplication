<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sm42.oscar.testapplication.ReportActivity">

    <Button
        android:id="@+id/button_take_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/button_take_picture" />

    <Button
        android:id="@+id/button_gps_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_take_picture"
        android:layout_alignParentEnd="true"
        android:text="@string/button_gps_pos" />

    <ImageView
        android:id="@+id/imageView_mugshot"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@+id/button_take_picture"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ronnierotten" />

    <Button
        android:id="@+id/button_call_113"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_mugshot"
        android:layout_centerHorizontal="true"
        android:text="@string/button_call_113" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/button_back" />

    <Button
        android:id="@+id/button_send_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/button_send_report" />
</RelativeLayout>
